<UserControl x:Class="SkyTrekVisual.GameItems.Enemy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyTrekVisual.GameItems"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<Grid Background="Tomato" Height="58" Width="48">-->
    <Grid Height="58" Width="48">

        <Grid Height="58" Width="48" Effect="{StaticResource ShadowDepth2}">
            <Border x:Name="HealthBorder" CornerRadius="1" Height="6" Width="48" Background="White" 
                    BorderThickness="1" BorderBrush="White" VerticalAlignment="Top" >
                <Border x:Name="HealthIndicator" CornerRadius="1" Height="4" Width="46" VerticalAlignment="Center" 
                        Background="#8BC34A" HorizontalAlignment="Left" />
            </Border>


            <Grid x:Name="ItemGrid" VerticalAlignment="Bottom" Height="48" Width="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="13*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
