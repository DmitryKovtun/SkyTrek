<UserControl x:Class="SkyTrek.Screens.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyTrek.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas Name="ScreensaverCanvas" Background="{StaticResource SpaceBlue}"/>
        <Border Background="Teal" Height="250" Width="350" Opacity="0.8"/>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Menu" x:Name="menuLabel" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            <Label x:Name="pressStartLabel" Margin="0,40,0,0" Content="Press S to start..." FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            <Button x:Name="start_game" Content="START GAME" Margin="5"></Button>
            <Button x:Name="shop" Content="SHOP" Margin="5"></Button>
            <Button x:Name="exit" Content="EXIT" Margin="5"></Button>
        </StackPanel>

    </Grid>
    
</UserControl>
