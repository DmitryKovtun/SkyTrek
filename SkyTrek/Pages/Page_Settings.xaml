<Page x:Class="SkyTrek.Pages.Page_Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SkyTrek.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="950"
      Title="Page_Settings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Label Content="Настройки" Margin="0 32 0 0" HorizontalAlignment="Center" Foreground="#B0BEC5"  FontSize="32"/>
        <Button x:Name="Button_BackToMenu" Click="Button_BackToMenu_Click" HorizontalAlignment="Left" Grid.RowSpan="2" Content="Назад" Style="{StaticResource MenuBackButtonStyle}"/>

        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border Background="#B0BEC5" Opacity="0.6"/>

            <Grid Height="320" Width="500">


                <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label Content="place for meditation.." HorizontalAlignment="Center" Foreground="#B0BEC5"  FontSize="32"/>
                </Grid>
            </Grid>

        </Grid>

     


    </Grid>
</Page>
