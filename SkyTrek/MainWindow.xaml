<Controls:CustomWindow x:Class="SkyTrek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:SkyTrekVisual.Controls;assembly=SkyTrekVisual"
        xmlns:Tools="clr-namespace:SkyTrekVisual.Tools;assembly=SkyTrekVisual"
        Tools:PersonalizationManager.Accent="Amethyst"
        Tools:PersonalizationManager.Theme="Light"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="Star Track" 
        Height="550" 
        Width="950"
        Icon="Icons/MainIcon.png"
        Closing="CustomWindow_Closing"
        KeyDown="MainWindow_KeyDown"
        KeyUp="MainWindow_KeyUp"
        Loaded="MainWindow_Loaded">

    <Grid>
        <Canvas Height="518" Width="950" Name="SpaceCanvas" Background="{StaticResource SpaceBlue}"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"  Content="{Binding Path=CurrentPage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
    </Grid>
</Controls:CustomWindow>
